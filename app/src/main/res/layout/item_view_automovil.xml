<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_automovil"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/unknown_automovil"
        android:contentDescription="@null"
        android:paddingRight="10dp"
        android:paddingEnd="0dp"
        android:paddingLeft="0dp"/>

    <TextView
        android:id="@+id/tv_modelo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modelo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_toRightOf="@id/iv_automovil"
        android:layout_toEndOf="@id/iv_automovil"/>


    <TextView
        android:id="@+id/tv_marca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marca"
        android:layout_toRightOf="@id/iv_automovil"
        android:layout_toEndOf="@id/iv_automovil"
        android:layout_below="@id/tv_modelo"/>

    <TextView
        android:id="@+id/tv_placa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placa"
        android:layout_toRightOf="@id/iv_automovil"
        android:layout_toEndOf="@id/iv_automovil"
        android:layout_below="@id/tv_marca"/>




</RelativeLayout>